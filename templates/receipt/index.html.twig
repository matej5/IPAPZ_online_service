{% extends 'base.html.twig' %}

{% block body %}
    {% for receipt in pagination %}
        <div class="row mt-3">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-7">Radnik: {{ receipt.worker.name }}</div>
                            <div class="col-md-5">{{ receipt.startOfService|date('H:i:s d-m-Y') }}</div>
                        </div>
                        <hr>
                        <div class="row">
                                <div class="col-md-9">{{ receipt.service.name }}</div>
                                <div class="col-md-3">{{ receipt.service.cost }}â‚¬</div>
                        </div>
                        <hr>
                        <p class="card-text">{{ receipt.office.address }}, {{ receipt.office.city }}, {{ receipt.office.getState }}</p>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    {{ knp_pagination_render(pagination) }}
{% endblock %}