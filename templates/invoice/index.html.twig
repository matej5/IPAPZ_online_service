<!doctype html>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    {% block stylesheets %}
    <link href="{{ asset('css/style.css') }}" rel='stylesheet' />
{% endblock %}
</head>
<body>
    <div class="receipt">
        <div class="receipt-content">
            <h1>{{ receipt.worker.firmName }}</h1>
            <h3>Receipt number: #{{ receipt.id }}</h3>
            <p>Worker: {{ receipt.worker.user.firstname }} {{ receipt.worker.user.lastname }}</p>
            <div class="row">
                {% if receipt.buyer is null %}
                    <div>Paypal Buyer</div>
                    <div>{{ receipt.startOfService|date('H:i d-m-Y') }}</div>
                {% else %}
                    <div>Buyer: {{ receipt.buyer.firstname }} {{ receipt.buyer.lastname }}</div>
                    <div>{{ receipt.startOfService|date('H:i d-m-Y') }}</div>
                {% endif %}
            </div>
            <hr>
            <div class="row">
                <div class="left">{{ receipt.service.name }}</div>
                <div class="right">{{ receipt.service.cost }}â‚¬</div>
            </div>
            <br>
            <hr>
            <div class="row">
                <div>
                    <p>{{ receipt.office.address }}, {{ receipt.office.city }}, {{ receipt.office.getState }}</p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>