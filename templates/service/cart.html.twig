{% extends 'base.html.twig' %}

{% block body %}

    <div class="row mt-3">
        <div class="col-lg-6">
            <h3>Your wish list</h3>
            <ul class="list group">
            {% for service in services %}
                <li class="list-group-item d-flex justify-content-between align-items-center">{{ service.name }}
                <span class="badge">{{ service.cost }} kn</span></li>
            {% endfor %}
                <h3>Choose your worker</h3>
            {% for worker in workers %}
                <li class="list-group-item d-flex justify-content-between align-items-center">{{ worker.name }}
                    <a href="{{ path('service_buy', {'id': worker.id}) }}" class="card-link">+</a></li>
            {% endfor %}
        </div>
    </div>
{% endblock %}