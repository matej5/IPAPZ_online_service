{% extends 'base.html.twig' %}

{% block body %}

    {% if is_granted('ROLE_BOSS') or is_granted('ROLE_ADMIN') %}
        {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.cost) }}
            <button type="submit" class="btn btn-primary" formnovalidate>Save</button>
        {{ form_end(form) }}
    {% endif %}

    <div class="row mt-3">
        <div class="col-lg-6">
            <ul class="list group">
            {% for service in services %}
                <li class="list-group-item d-flex justify-content-between align-items-center">{{ service.name }}
                <span class="badge">{{ service.cost }} kn</span>
                    {% if is_granted('ROLE_USER') %}
                <a href="{{ path('service_add', {'id': service.id}) }}" class="card-link">Add</a></li>
                    {% endif %}
            {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}